// ============================================
// English Versions
// ============================================

function format_float_precision(value: float, precision: integer) -> string do
    return fmt_float_precision(value, precision)
end

function format_scientific(value: float, precision: integer) -> string do
    return fmt_scientific(value, precision)
end

function format_thousands(value: integer) -> string do
    return fmt_thousands(value)
end

function format_percent(ratio: float, precision: integer) -> string do
    return fmt_percent(ratio, precision)
end

function format_progress(ratio: float, width: integer) -> string do
    return fmt_progress(ratio, width)
end


